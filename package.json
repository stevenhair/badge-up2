{
  "name": "badge-up2",
  "version": "2.0.1",
  "description": "A module that produces SVG badges",
  "main": "index.js",
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prebuild": "rimraf dist",
    "postbuild": "cp package.json README.md LICENSE dist",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stevenhair/badge-up2.git"
  },
  "homepage": "https://github.com/stevenhair/badge-up2#readme",
  "engines": {
    "node": ">=10"
  },
  "bugs": "https://github.com/stevenhair/badge-up2/issues",
  "keywords": [
    "badge"
  ],
  "license": "MIT",
  "author": "Steve Hair <me@stevenhair.com>",
  "devDependencies": {
    "@types/dot": "^1.1.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.50.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-unicorn": "^51.0.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "css-color-names": "^1.0.1",
    "dot": "^1.1.3",
    "svgo": "^3.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxWorkers": 1
  }
}
